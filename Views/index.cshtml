@if(@Model.Count == 0)
{
  <h1>No contacts have been added!</h1>
}
@foreach (var contact in Model)
{
  <h3><a href='/contact/@contact.GetID()'>@contact.GetName()</a></h3>
}
<p><a href='/contact'>Add a new contact</a></p>
<form action="/contact/clear" method="post">
  <button type="submit" name="button">Clear All Contacts</button>
</form>
